# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{*.py,*.py.j2}]
indent_size = 4
indent_style = space

[*.{tf,hcl,yml,yaml}]
indent_size = 2
indent_style = space

[{Makefile,**.mk}]
indent_style = tab

[*.{md,markdown}]
indent_size = 2
indent_style = space

[{*.sh,*.sh.j2}]
indent_size = 4
indent_style = space

[*.{txt}]
indent_size = 4
indent_style = space